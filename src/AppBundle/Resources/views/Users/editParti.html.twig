{% extends 'base.html.twig' %}


{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Edit Profile</h1>
                    <li>
                        <a href="{{ path('location_index') }}">Back to the list</a>
                    </li>
                </div>
                <div class="col-md-5">


                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        {{ form_start(edit_form) }}
                        <div class="box clearfix">
                            <div class="heading">
                                <h3 class="text-uppercase">Profile details</h3>
                            </div>
                            <form class="form-control">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            {{ form_row(edit_form.nom) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            {{ form_row(edit_form.prenom) }}
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            {{ form_row(edit_form.telephone) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group date">
                                            {{ form_row(edit_form.civilite) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-sm-4 ">

                                        {{ form_row(edit_form.username ) }}
                                    </div>

                                    {#<div class="col-sm-4 ">#}
                                    {#{{ form_row(edit_form.datePublication ) }}#}
                                    {#</div>#}
                                    <div class="col-sm-4 ">
                                        {{ form_row(edit_form.email ) }}
                                    </div>
                                </div>
                                <div class="row">
                                    {{ form_row(edit_form.plainPassword ) }}
                                </div>
                                <div>
                                    <div class="col-sm-13 text-center">
                                        <input type="submit" class=" btn btn-template-main" value="Edit" />

                                    </div>

                                </div>
                                {{ form_end(edit_form) }}
                            </form>

                        </div>

                    </div>
                </div>
            </div>



        </div>
    </div>
{% endblock %}