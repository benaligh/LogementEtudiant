{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>New account </h1>
                </div>
                <div class="col-md-5">


                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="box">


                        <p class="lead">Not our registered customer yet?</p>
                        <p>With registration with us new world of fashion, fantastic discounts and much more opens to you! The whole process will not take you more than a minute!</p>
                        <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer service center is working for you 24/7.</p>

                        <hr>

                        <div class="box clearfix">
                            <div class="heading">
                                <h3 class="text-uppercase">Personal details</h3>
                            </div>
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_start(form, {'method': 'post', 'action': path('addEtd'), 'attr': {'class': 'fos_user_registration_register'}}) }}

                            <form>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            {{ form_row(form.nom) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            {{ form_row(form.prenom) }}
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            {{ form_row(form.ecole) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            {{ form_row(form.telephone) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            {{ form_row(form.civilite) }}
                                        </div>
                                    </div>


                                    <div class="col-sm-13 ">
                                        {{ form_row(form.email ) }}
                                    </div>

                                    <div class="col-sm-13 ">
                                        {{ form_row(form.username ) }}
                                    </div>


                                    <div class="col-sm-13 ">
                                        {{ form_row(form.plainPassword ) }}
                                        </div>

                                </div>

                                <div>
                                    <div class="col-sm-13 text-center">
                                        <input type="submit" class=" btn btn-template-main" value="{{ 'registration.submit'|trans }}"/>
                                    </div>

                                </div>
                                {{ form_end(form) }}
                            </form>

                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- /#content -->


{% endblock %}
