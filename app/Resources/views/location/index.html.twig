{% block body %}
    <!-- *** LEFT COLUMN ***
_________________________________________________________ -->
<div id="content">
    <div class="col-md-12">
        <div class="text-muted lead bar background-pentagon no-mb text-center ">

            In our Ladies department we offer wide selection of the best products we have found and carefully selected worldwide. Pellentesque habitant morbi tristique senectus et netuss.
        </div>
    </div>
    <div class="container ">

        <div class="lead ">



        <div class="col-md-9">
        <div class="row products ">
            {% for location in locations %}
            <div class="col-md-6 col-sm-8">
                <div class="product">
                    <div class="image">
                            <img src="{{ asset(location.photo) }}" alt="" class="img-responsive image1">
                    </div>
                    <!-- /.image -->
                    <div class="text">
                        <h3>{{ location.titre }}</h3>
                        <p class="price">{{ location.description }}</p>
                        <p>{{ location.type }} {{ location.etat }}</p>
                        <p>{{ location.equipement }} {{ location.piece }}</p>
                        <p>{{ location.surface }}</p>
                        <p>{% if location.dateDisp %}{{ location.dateDisp|date('Y-m-d') }}{% endif %}</p>
                        <p>{% if location.datePublication %}{{ location.datePublication|date('Y-m-d') }}{% endif %}</p>
                        <p>{{ location.adresse }}</p>
                        <div class="ribbon sale">
                            <div class="theribbon">{{ location.prix }}</div>
                            <div class="ribbon-background"></div>
                        </div>

                        <div class="ribbon new">
                            <div class="theribbon">{{ location.region }}</div>
                            <div class="ribbon-background"></div>
                        </div>

                            <a class="btn btn-default" href="{{ path('location_edit', { 'location': location.id }) }}">edit</a>
                            <a  class="btn btn-template-main" href="{{ path('location_delete', { 'location': location.id }) }}">delete</a>


                    </div>
                    <!-- /.text -->
                </div>
                <!-- /.product -->
            </div>
            {% endfor %}
        </div>
    </div>
        </div>
    </div>
</div>
{% endblock %}
