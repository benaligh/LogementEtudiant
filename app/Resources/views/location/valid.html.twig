<h4>Liste des Locations</h4>
<table class="table-bordered">
    <tr>
        <td>ID</td>
        <td>Image</td>
        <td>Type </td>
        <td>état</td>
        <td>Piéce</td>
        <td>Surface</td>
        <td>Equipement</td>
        <td>disponible</td>
        <td>Username</td>
        <td>email</td>
        <td>Status</td>
        <td>actions</td>


    </tr>

    {% for location in locations %}
        <tr>

            <td>{{ location.id }}</td>
            <td><img src="{{ asset('uploads/annonce/'~ location.photo ) }}" class="img-responsive image" width="100" height="100"></td>
            <td>{{ location.type }}</td>
            <td>{{ location.etat }}</td>
            <td>{{ location.piece }}</td>
            <td>{{ location.surface }} m²</td>
            <td>{{ location.equipement }}</td>
            <td>{% if location.dateDisp %}{{ location.dateDisp|date('m/d/Y') }}{% endif %}</td>
            <td>{{ location.user.username }}</td>
            <td>{{ location.user.email }}</td>
            <td>status</td>
            <td> <a href="#">
                    <button type="button" class="btn btn-info">Valider</button>
                </a></td>


        </tr>
    {% endfor %}

</table>

<div class="navigation text-center">
    {{ knp_pagination_render(locations) }}
</div>


