{% block body %}
    <div id="content">
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">

                    </div>
                </div>
            </div>
        </div>
        <div class="container ">
            <div class="">
                <div class="col-md-9">
                    <blockquote>
                        <p class="lead" style="text-align: justify; font-size: 1em; line-height: 1.3em;">
                            <em>{{ location.description }}.</em></p>
                    </blockquote>
                    <h3>{{ location.titre }}</h3>

                    <p class="Plus de description "><a href="#details" class="scroll-to text-uppercase">lire la suite ...

                        </a>
                    </p>

                    <div class="row" id="productMain">
                        <div class="col-sm-6">
                            <p style="color: #38a7bb">Publié
                                le {% if location.datePublication %}{{ location.datePublication|date('m/d/Y') }}{% endif %}</p>

                            <div id="image">
                                <img src="{{ asset('uploads/annonce/'~ location.photo ) }}"
                                     class="img-responsive image1">
                            </div>

                            <div class="ribbon new">
                                <div class="theribbon " style="width: max-content">{{ location.prix }} Dt</div>
                                <div class="ribbon-background"></div>
                            </div>
                            <!-- /.ribbon -->

                        </div>
                        <div class="col-sm-6">
                            <div class="box">

                                <form>
                                    <div class="sizes">


                                    </div>

                                    <p class="price"></p>

                                    {% for role in location.user.roles %}
                                    {% if role == "ROLE_ETUDIANT" %}
                                        etudiant
                                    <h5><i class="fa fa-user"></i>
                                        : {{ location.user.civilite }} {{ location.user.nom }}  {{ location.user.prenom }}
                                        <br></h5>
                                    <h5><i class="fa fa-mobile-phone" href="tel:+216{{ location.user.telephone }}"></i>
                                        : {{ location.user.telephone }} <br></h5>
                                    <a class="btn btn-facebook" href="tel:{{ location.user.telephone }} ">Appeler
                                        maintenant </a>
                                    <h5><i class="fa fa-envelope"></i> :{{ location.user.email }}<br></h5>
                                    <a class="btn btn-facebook" href="mailto: {{ location.user.email }} ">Envoyer un
                                        email maintenant </a>
                                    <h5><i class="fa fa-university"></i> : {{ location.user.ecole }}<br></h5>
                                    <h5><i class="fa fa-map-marker"></i> :{{ location.user.adresse }}</h5>

                                    {% elseif role == "ROLE_PRO" %}
                                        pro
                                        <h5><i class="fa fa-user"></i>
                                            : {{ location.user.nomgroup }}
                                            <br></h5>
                                        <h5><i class="fa fa-mobile-phone" href="tel:+216{{ location.user.telephone }}"></i>
                                            : {{ location.user.telephone }} <br></h5>
                                        <a class="btn btn-facebook" href="tel:{{ location.user.telephone }} ">Appeler
                                            maintenant </a>
                                        <h5><i class="fa fa-envelope"></i> :{{ location.user.email }}<br></h5>
                                        <a class="btn btn-facebook" href="mailto: {{ location.user.email }} ">Envoyer un
                                            email maintenant </a>
                                        <h5><i class="fa fa-map-marker"></i> :{{ location.user.adresse }}</h5>

                                    {% elseif role == "ROLE_PARTICULIER" %}
                                        particulier
                                        <h5><i class="fa fa-user"></i>
                                            : {{ location.user.civilite }} {{ location.user.nom }}  {{ location.user.prenom }}
                                            <br></h5>
                                        <h5><i class="fa fa-mobile-phone" href="tel:+216{{ location.user.telephone }}"></i>
                                            : {{ location.user.telephone }} <br></h5>
                                        <a class="btn btn-facebook" href="tel:{{ location.user.telephone }} ">Appeler
                                            maintenant </a>
                                        <h5><i class="fa fa-envelope"></i> :{{ location.user.email }}<br></h5>
                                        <a class="btn btn-facebook" href="mailto: {{ location.user.email }} ">Envoyer un
                                            email maintenant </a>
                                        <h5><i class="fa fa-map-marker"></i> :{{ location.user.adresse }}</h5>
                                    {% endif %}
                                    {% endfor %}
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="box" id="details">
                        <p>
                        <table class="table">
                            <h4>Descriptif général</h4>
                            <tr>
                                <td class="text-center"><i class="fa fa-bed" aria-hidden="true"></i></td>
                                <td class="text-center">Etat</td>
                                <td class="text-center">Nombre de Piéces</td>
                                <td class="text-center">Surface</td>
                                <td class="text-center"></i>Equipement</td>
                                <td class="text-center"><i class="fa fa-calendar" aria-hidden="true"></i>
                                </td>
                                <td class="text-center"><i class="fa fa-home" aria-hidden="true"></i></td>
                                <td class="text-center"><i class="fa fa-map-marker" aria-hidden="true"></i></td>

                            </tr>

                            <tr>
                                <td class="text-center">{{ location.type }}</td>
                                <td class="text-center">{{ location.etat }}</td>
                                <td class="text-center">{{ location.piece }} piéces</td>
                                <td class="text-center"> {{ location.surface }} m²</td>
                                <td class="text-center">{{ location.equipement }}</td>
                                <td class="text-center">{% if location.dateDisp %} à partir de {{ location.dateDisp|date('m/d/Y') }}{% endif %}</td>
                                <td class="text-center">{{ location.adresse }}</td>
                                <td class="text-center">{{ location.region }}</td>
                            </tr>
                        </table>

                    </div>

                </div>

            </div>
            <!-- /.col-md-9 -->


            <!-- *** RIGHT COLUMN ***
    _________________________________________________________ -->

            <div class="col-md-3">
                <!-- *** CUSTOMER MENU ***
    _________________________________________________________ -->
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Mon section</h3>
                    </div>


                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked">
                                <li >
                                    <a href="{{ path('location_index')}}"><i class="fa fa-list"></i> Mes annonces</a>
                                </li>
                                <li>
                                    <a href="{{ path('listfavoris')}}"><i class="fa fa-heart"></i> Mes favoris</a>
                                </li>
                                <li>
                                    {#<a href=""><i class="fa fa-user"></i> Mon profile</a>#}
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a href="{{ path('editetd', { 'user':  app.user}) }}">
                                        <i class="fa fa-user"></i>  profile : {{ app.user.username }}
                                    </a>
                                </li>
                                {% endif %}
                                </li>
                                <li class="active">
                                    <a href="{{ path('location_search')}}"><i class="fa fa-search"></i> Les annonces</a>
                                </li>

                            </ul>
                        </div>


                </div>
                <!-- /.col-md-3 -->

                <!-- *** CUSTOMER MENU END *** -->
            </div>

            <!-- *** RIGHT COLUMN END *** -->
        </div>
    </div>
    </div>
{% endblock %}